//- email/base.pug
doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{title} | SellPass
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 20px;
      }
      .container {
        background-color: #ffffff;
        margin: 0 auto;
        padding: 20px;
        max-width: 600px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        color: #333;
      }
      p {
        font-size: 16px;
        line-height: 1.5;
        color: #666;
      }
      .footer {
        margin-top: 20px;
        text-align: center;
        font-size: 12px;
        color: #aaa;
      }

  body
    .container
      block content

    .footer
      p &copy; #{new Date().getFullYear()} SellPass. All rights reserved.
